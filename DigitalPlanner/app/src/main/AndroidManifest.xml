<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.goddard.joel.digitalplanner"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".BlockEdit"
            android:label="@string/edit_block_name">
        </activity>
        <activity android:name=".TeacherEdit">
        </activity>
        <activity android:name=".SubjectEdit">
        </activity>
        <activity android:name=".HomeworkEdit">
        </activity>
        <activity android:name=".CalenderActivity">
        </activity>
        <activity android:name=".CalendarTest">
        </activity>
        <activity android:name=".GetLessonActivity">
        </activity>
    </application>

</manifest>
